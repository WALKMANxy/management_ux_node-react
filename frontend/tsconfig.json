{
  "compilerOptions": {
    "target": "ES2020", // Updated to a more recent target
    "lib": [
      "esnext",
      "dom" // Simplified
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext", // Keep this as it is for modern module resolution
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "../backend/src/models/Agent.ts", "../backend/src/models/Client.ts", "../backend/src/models/Movement.ts"]
}
