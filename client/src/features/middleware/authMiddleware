import { Middleware } from '@reduxjs/toolkit';
import { RootState } from '../store'; // Adjust this import path as needed
import { showToast } from '../../services/toastMessage'; // Adjust this import path as needed

export const authMiddleware: Middleware<{}, RootState> = store => next => action => {
  if (action.type.endsWith('/pending') && action.meta?.requiresAuth) {
    const state = store.getState();
    if (!state.auth.isLoggedIn) {
      showToast.error('You must be logged in to perform this action.');
      return;
    }
  }
  return next(action);
};